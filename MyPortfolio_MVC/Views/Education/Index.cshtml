@model List<MyPortfolio_MVC.Models.TblEducations>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<h2>Eğitim Hayatım</h2>
<br />
<table class="table table-bordered table-hover">


    <tr>
        <td>#</td>
        <td>Okul Adı</td>
        <td>Bölüm</td>
        <td>Başlangıç</td>
        <td>Bitiş</td>
        <td>Derece</td>
        <td>Sil</td>
        <td>Güncelle</td>
    </tr>
    @foreach(var item in Model)
            {
        count++;
            <tr>
                <th>@count</th>
                <td>@item.SchoolName</td>
                <td>@item.Department</td>
                <td>@(item.StartDate.HasValue ? item.StartDate.Value.ToShortDateString() : "Tarih Yok")</td>

                @* <td>@item.StartDate.Value.ToShortDateString()</td>*@
                <td>
                    @(String.IsNullOrEmpty(item.EndDate.ToString()) ? "Devam Ediyor":
            item.EndDate?.ToShortDateString() )
                </td>
                <td>@item.Degree</td>
                <td><a href="/Education/DeleteEducation/@item.Educationid" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Education/UpdateEducation/@item.Educationid" class="btn btn-outline-danger">Güncelle</a></td>
            </tr>

            }
</table> 
<br />
<a href="/Education/CreateEducation" class="btn btn-outline-success">Yeni Eğitim Ekle</a> 

