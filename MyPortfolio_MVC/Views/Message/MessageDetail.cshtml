@model MyPortfolio_MVC.Models.TblMessages
@{
    ViewBag.Title = "MessageDetail";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>Mesaj Detayı</h2>
<table class="table table-striped" >

    <tr>
        <th>Gönderen Ad Soyad</th>
        <td>@Model.Name</td>
    </tr> 
    <tr>
        <th>Gönderen E-Mail</th>
        <td>@Model.Email</td>
    </tr> 
    <tr>
        <th>Mesaj İçeriği</th>
        <td>@Model.MessageContent</td>
    </tr>
</table>
<br />
<a href="/Message/Index" class="btn btn-primary">Mesajlara Geri Don</a>

