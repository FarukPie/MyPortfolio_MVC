@model List<MyPortfolio_MVC.Models.TblProjects>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<h2>Projelerim</h2>
<table class="table table-bordered">
    <tr>
    <th>#</th>
    <th>Proje Adı</th>
    <th>Proje Acıklaması</th>
    <th>Kategorı</th>
    <th>Github Url</th>
    <th>Sıl</th>
    <th>Guncelle</th>
    </tr>
    @foreach(var item in Model)
    {
        count++;

    <tr>
        <td>@count</td>
        <td>@item.Name</td>
        <td>@item.Description </td>
        <td>@item.TblCategories.Name </td>
        <td><a href="@item.GitHubUrl" class="btn btn-outline-warning">Github Link</a></td>
        <td><a href="/Project/DeleteProject/@item.Projectid" class="btn btn-outline-warning">Sil</a></td>
        <td><a href="/Project/UpdateProject/@item.Projectid" class="btn btn-outline-warning">Guncelle</a></td>
    </tr>
    }
</table>
<br />
<a href="/Project/CreateProject/" class="btn btn-outline-success">Yeni Proje Olustur</a>

